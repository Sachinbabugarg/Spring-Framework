<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:p="http://www.springframework.org/schema/p"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean  name="Add"  class="com.Spring.Reference.Address">
<property name="tadd" value="Bhopal"></property>
<property name="padd" value="Satna"></property>
<property name="cadd" value="Pune"></property>
</bean>
<bean name="Emp"  class="com.Spring.Reference.Employee">
<property name="eid" value="1"></property>
<property name="ename" value="Sachin"></property>
<property name="address" ref="Add"></property>

</bean>


</beans>